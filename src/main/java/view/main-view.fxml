<?xml version="1.0" encoding="UTF-8"?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainController"
            prefWidth="1200"
            prefHeight="700">

    <top>
        <HBox spacing="15" style="-fx-padding:10; -fx-background-color:#1e272e;">
            <Label text="QUẢN LÝ TIỆM NET"
                   style="-fx-text-fill:white; -fx-font-size:18px;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Label fx:id="lblUser"
                   text="Nhân viên: admin"
                   style="-fx-text-fill:white;"/>

            <Button text="Đăng xuất"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10"
              prefWidth="200"
              style="-fx-padding:10; -fx-background-color:#2f3640;">
            <Button text="Trang chủ" maxWidth="Infinity"/>
            <Button text="Quản lý máy" maxWidth="Infinity"/>
            <Button text="Khách chơi" maxWidth="Infinity"/>
            <Button text="Nhân viên" maxWidth="Infinity"/>
            <Button text="Tính tiền" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane">
            <Label text="Chào mừng đến hệ thống quản lý tiệm net"/>
        </StackPane>
    </center>

</BorderPane>
